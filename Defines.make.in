PAPI_INC=$(PAPI_DIR)/include
PAPI_LIB=$(PAPI_DIR)/lib
LIBS=.:$(PAPI_LIB)

STREAMIT_LIB_CLUSTER=$(STREAMIT_HOME)/library/cluster

AR=ar
GCC=gcc
LAMINAR_CC=clang
STREAMIT_CC=clang++
XEON_PHI_LAMINAR_CC=icc
XEON_PHI_STREAMIT_CC=icpc
    
STREAMIT_CCFLAGS=-O3 -lpthread -lm -lstdc++
LAMINAR_CFLAGS=-O3 -DATOMIC_BARRIER -lpthread -lm

OPTERON_CFLAGS=-D__AMD_ABU_DHABI__ -DMEASURE_TIME -DMEASURE_CPI -DMEASURE_ICACHEMISS -D_GNU_SOURCE
LINARO_CFLAGS=-D__ARMv7__ -DMEASURE_TIME -DMEASURE_CPI 
SANDY_BRIDGE_CFLAGS=-D__INTEL_SANDYBRIDGE__ -DMEASURE_TIME -DMEASURE_CPI -DMEASURE_MEMACC -D_GNU_SOURCE
IVY_BRIDGE_CFLAGS=-D__INTEL_IVYBRIDGE__ -DMEASURE_TIME -DMEASURE_CPI -DMEASURE_MEMACC -DMEASURE_ENERGY
WOLFDALE_CFLAGS=-DMEASURE_TIME
XEON_PHI_CFLAGS=-mmic -DMEASURE_TIME -DMEASURE_CPI -D_GNU_SOURCE
HASWELL_CFLAGS=-D__INTEL_HASWELL__ -DMEASURE_TIME -DMEASURE_CPI -DMEASURE_MEMACC -DMEASURE_ENERGY
VIRTUALBOX_CFLAGS=-D__INTEL_HASWELL__ -DNO_MEASURE
UNKNOWN_CFLAGS=-DMEASURE_TIME

OPTERON_RUN_OPT=likwid-pin -c 0,0-15,32-63,16-31
LINARO_RUN_OPT=
SANDY_BRIDGE_RUN_OPT=$(LIKWID_DIR)/bin/likwid-pin -c 0,0-3
IVY_BRIDGE_RUN_OPT=sudo LD_LIBRARY_PATH=$(PAPI_LIB):${LD_LIBRARY_PATH} $(LIKWID_DIR)/bin/likwid-pin -c 0,0-3
WOLFDALE_RUN_OPT=likwid-pin -c 0,0,4,2,6
XEON_PHI_RUN_OPT=likwid-pin -c 1,1
HASWELL_RUN_OPT=sudo LD_LIBRARY_PATH=$(PAPI_LIB):${LD_LIBRARY_PATH} $(LIKWID_DIR)/bin/likwid-pin -c 0,0-3
VIRTUALBOX_RUN_OPT=$(LIKWID_DIR)/bin/likwid-pin -c 0,0-3
UNKNOWN_RUN_OPT=likwid-pin -c 0,0

LINARO_LLC_OPT=-float-abi=hard 
